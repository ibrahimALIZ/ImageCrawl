<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="@color/red_base"/>
            <stroke 
                android:width="1dip"
                android:color="@color/red_stroke"	/>
            <corners 
                android:radius="3dip"/>
            <padding 
                android:left="20dip"
                android:right="20dip"/>
           
        </shape>
    </item>
	<item>
	    <shape>
	        <gradient 
	            android:startColor="@color/red_gradientS"
	            android:endColor="@color/red_gradientE"
	            android:angle="270"/>
	        <stroke 
                android:width="1dip"
                android:color="@color/red_stroke"/>
	        <corners 
                android:radius="3dip"/>
            <padding 
                android:left="10dip"
                android:right="10dip"/>
	    </shape>
	</item>
</selector>