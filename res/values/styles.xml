<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="crawl_header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/red</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="crawl_header2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/red</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="main_menu">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">45dip</item>
        <item name="android:layout_marginRight">45dip</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/menu_shadow_color</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="main_menu_btnTop" parent="main_menu">
        <item name="android:layout_marginTop">30dip</item>
    </style>

    <style name="main_menu_btnNormal" parent="main_menu">
        <item name="android:layout_marginTop">12dip</item>
    </style>

</resources>